{
  "name": "handlery",
  "version": "0.1.0",
  "type": "module",
  "imports": {
    "#*": [
      "./src/*",
      "./src/*.ts",
      "./src/*.tsx",
      "./src/*/index.ts"
    ]
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./adapters": {
      "types": "./src/adapters/index.d.ts",
      "default": "./src/adapters/index.js"
    }
  },
  "main": "src/index.ts",
  "scripts": {
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@janis.me/linter-config": "workspace:*",
    "@janis.me/typescript-config": "workspace:*",
    "emittery": "^1.1.0"
  },
  "peerDependencies": {
    "emittery": "^1.1.0"
  },
  "peerDependenciesMeta": {
    "emittery": {
      "optional": true
    }
  }
}
